<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@color/colorBLGR">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/photoprofil_help"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rabiaa"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rabiaa Nouri"
                    android:textColor="#fff"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/connected_user_help"
                    android:textStyle="bold"/>

            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/menu_help"
                            android:src="@drawable/ic_menus"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/notification_help"
                            android:src="@drawable/ic_notifications"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/help_help"
                            android:src="@drawable/ic_help"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/user_help"
                            android:src="@drawable/ic_person"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/logout_help"
                            android:src="@drawable/exit"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/drawcontainer_help">
            <android.support.v4.widget.DrawerLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-10dp"
                android:id="@+id/draw_help"
                >

                <RelativeLayout
                    android:id="@+id/recycler_view_help"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="15dp">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TableRow>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:padding="12dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_person"/>
                        <TextView
                            android:padding="12dp"
                            android:text="Pour Mettre à jour votre profil"
                            android:textColor="#000"
                            android:textSize="17dp"/>
                    </TableRow>
                        <TableRow>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:padding="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_notifications"/>
                            <TextView
                                android:padding="12dp"
                                android:text="Pour consulter vos notifications"
                                android:textColor="#000"
                                android:textSize="17dp"/>
                        </TableRow>
                        <TableRow>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:padding="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_help"/>
                            <TextView
                                android:padding="12dp"
                                android:text="Pour consulter aller vers cette interface"
                                android:textColor="#000"
                                android:textSize="17dp"/>
                        </TableRow>
                        <TableRow>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:padding="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_menus"/>
                            <TextView
                                android:padding="12dp"
                                android:text="Pour afficher le menu latéral"
                                android:textColor="#000"
                                android:textSize="17dp"/>
                        </TableRow>
                        <TableRow>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:padding="12dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/exit"/>
                            <TextView
                                android:padding="12dp"
                                android:text="Pour se déconnecter"
                                android:textColor="#000"
                                android:textSize="17dp"/>
                        </TableRow>
                    </TableLayout>

                </RelativeLayout>
                <android.support.design.widget.NavigationView
                    android:id="@+id/nav_view_help"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorBLGR"
                    app:itemTextColor="#FFFFFF"
                    app:menu="@menu/drawermenu1"
                    android:paddingLeft="16dp"
                    android:layout_gravity="start">

                </android.support.design.widget.NavigationView>
            </android.support.v4.widget.DrawerLayout>


        </LinearLayout>



    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>